{
  "rules": {
    "semi": [2, "never"],
    "no-console": 0,
    "space-before-function-paren": 0,
    "spaced-comment": 0,
    "jsx-quotes": 0,
    "max-len": [2, 80, 2],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}